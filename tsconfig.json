{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "outDir": "./build",
        "strict": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "alwaysStrict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["packages"],
    "exclude": ["node_modules"]
  }
